     <FUNCNAME>BC402_CREATE_SEP_STRING</FUNCNAME>
     <SHORT_TEXT>Creates Character String from Table Data</SHORT_TEXT>
     <IMPORT>
      <RSIMP>
       <PARAMETER>IM_NUMBER</PARAMETER>
       <DEFAULT>&apos;1&apos;</DEFAULT>
       <OPTIONAL>X</OPTIONAL>
       <REFERENCE>X</REFERENCE>
       <TYP>I</TYP>
      </RSIMP>
      <RSIMP>
       <PARAMETER>IM_TABLE_NAME</PARAMETER>
       <DEFAULT>&apos;SFLIGHT&apos;</DEFAULT>
       <OPTIONAL>X</OPTIONAL>
       <REFERENCE>X</REFERENCE>
       <TYP>TABNAME</TYP>
      </RSIMP>
      <RSIMP>
       <PARAMETER>IM_SEPARATOR</PARAMETER>
       <DEFAULT>&apos;#&apos;</DEFAULT>
       <OPTIONAL>X</OPTIONAL>
       <REFERENCE>X</REFERENCE>
       <TYP>C</TYP>
      </RSIMP>
      <RSIMP>
       <PARAMETER>IM_UNIQUE</PARAMETER>
       <DEFAULT>&apos;X&apos;</DEFAULT>
       <OPTIONAL>X</OPTIONAL>
       <REFERENCE>X</REFERENCE>
       <TYP>C</TYP>
      </RSIMP>
     </IMPORT>
     <EXPORT>
      <RSEXP>
       <PARAMETER>EX_STRING</PARAMETER>
       <REFERENCE>X</REFERENCE>
       <TYP>STRING</TYP>
      </RSEXP>
     </EXPORT>
     <EXCEPTION>
      <RSEXC>
       <EXCEPTION>NO_DATA</EXCEPTION>
      </RSEXC>
     </EXCEPTION>
     <DOCUMENTATION>
      <RSFDO>
       <PARAMETER>IM_NUMBER</PARAMETER>
       <KIND>P</KIND>
       <STEXT>Number of Data Records</STEXT>
      </RSFDO>
      <RSFDO>
       <PARAMETER>IM_TABLE_NAME</PARAMETER>
       <KIND>P</KIND>
       <STEXT>Name of Transparent Table</STEXT>
      </RSFDO>
      <RSFDO>
       <PARAMETER>IM_SEPARATOR</PARAMETER>
       <KIND>P</KIND>
       <STEXT>Separator</STEXT>
      </RSFDO>
      <RSFDO>
       <PARAMETER>IM_UNIQUE</PARAMETER>
