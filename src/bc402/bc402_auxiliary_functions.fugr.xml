       <STEXT>All Data Records Unique</STEXT>
      </RSFDO>
      <RSFDO>
       <PARAMETER>EX_STRING</PARAMETER>
       <KIND>P</KIND>
       <STEXT>Character String of Data Records</STEXT>
      </RSFDO>
      <RSFDO>
       <PARAMETER>NO_DATA</PARAMETER>
       <KIND>X</KIND>
       <STEXT>Transparent table is empty</STEXT>
      </RSFDO>
     </DOCUMENTATION>
